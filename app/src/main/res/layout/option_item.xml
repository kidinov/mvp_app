<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginTop="6dp"
                                    app:cardCornerRadius="2dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_material_margin">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:textSize="@dimen/text_small_body"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/constraint_layout"
            app:layout_constraintTop_toTopOf="@+id/constraint_layout"
            tools:text="5.0"/>

        <TextView
            android:id="@+id/exposition_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray4"
            android:textSize="@dimen/text_body"
            app:layout_constraintTop_toBottomOf="@+id/price"
            tools:text="Guided Tour Highlights from the Rijksmuseum. Language: English \n\nThe guided tour starts by the Information Desk in the museum Atrium. Please report there prior to the tour.\n\nWith this reservation, you will not have to queue outside. If you still need to purchase an admission ticket, you can buy a ticket online, or you will have to pass by the ticket counter inside. Therefore, we recommend that you take waiting times into consideration."/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_material_margin"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_layout"
            app:layout_constraintBottom_toTopOf="@+id/exposition_description"
            tools:text="10:30 - 11:30"/>

        <TextView
            android:id="@+id/exposition_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_material_margin"
            android:textColor="@color/gray2"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintRight_toRightOf="@+id/constraint_layout"
            app:layout_constraintTop_toBottomOf="@+id/exposition_description"
            tools:text="Guided tours adults"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
